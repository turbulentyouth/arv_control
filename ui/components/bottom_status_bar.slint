import { StatusItem } from "./status_item.slint";

export component BottomStatusBar inherits Rectangle {
    in property <string> throttle: "N/A";
    in property <string> depth: "N/A";
    in property <string> pitch: "N/A";
    in property <string> roll: "N/A";
    in property <string> battery: "---";
    in property <string> mode: "---";
    in property <string> gesture: "";
    in property <string> armed: "锁定";

    height: 40px;
    background: #2b3b4b80;
    
    HorizontalLayout {
        padding-left: 20px;
        padding-right: 20px;
        spacing: 20px;
        
        StatusItem { label: "油门:"; value: root.throttle; }
        StatusItem { label: "深度:"; value: root.depth; }
        StatusItem { label: "俯仰角:"; value: root.pitch; }
        StatusItem { label: "滚转角:"; value: root.roll; }
        
        Rectangle { width: 20px; } // Spacer

        StatusItem { label: "手柄:"; value: "---"; }
        StatusItem { label: "模式:"; value: root.mode; }
        StatusItem { label: "手势:"; value: root.gesture; }
        StatusItem { label: "状态:"; value: root.armed; }
        StatusItem { label: "电池:"; value: root.battery; }
    }
}
